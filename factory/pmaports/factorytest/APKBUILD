# Maintainer: Martijn Braam <martijn@brixit.nl>
pkgname=factorytest
_pyname=factorytest_pinephone
pkgver=0.64.0
pkgrel=0
pkgdesc="Factory test tool for the PinePhone"
url="https://gitlab.com/MartijnBraam/factorytest"
arch="noarch"
license="MIT"
depends="python3 py3-gobject3 gtk+3.0 py3-wifi py3-smbus py3-serial alsa-utils py3-setuptools v4l-utils xz imagemagick firmware-anx7688 qfirehose firmware-eg25"
makedepends="py3-setuptools"
_pypiprefix="${_pyname%${_pyname#?}}"
source="
	https://gitlab.com/MartijnBraam/factorytest/-/archive/$pkgver/factorytest-$pkgver.tar.gz
"
builddir=$srcdir/$pkgname-$pkgver

build() {
	python3 setup.py build
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}
